{
  "extends": "google",
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": "off",
    "no-use-before-define": "off",
    "new-cap": "warn",
    "max-len": [2, 120, {
      "ignoreComments": true
    }],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": [
        "error",
        "only-multiline"
    ],
    "newline-after-var": "off",
    "require-jsdoc": "off",
    "strict": [
        "error",
        "never"
    ]
  }
}
